( Assume point and VT cursor are together, )
( save VT cursor, type out rest of line, )
( and return VT cursor here. )
( Factor of ki.redraw )
: ki.savetype ( -- )
  ( save cursor pos )
  s" [s" type
  ( type out rest of text )
  ki.a ki.> @ +               ( addr )
  ki.n @ ki.> @ -             ( addr n )
  type
  ( clear rest of screen and return cursor )
  s" [J[u" type
;

( Assuming the VT cursor is at ki.>save, )
( redraw from there to ki.n, )
( and reposition VT cursor at ki.> . )
: ki.redraw
  ki.>save @ ki.> @
  - dup                         ( n n )
  0 > if
    ( new point is behind old one )
    begin
      8 emit
      1-                        ( n )
      dup
      0=
    until
    drop
    ki.savetype
  else
    ( new point is forward of old one )
    negate                      ( n )
    ( type out text from old point pos to new point pos )
    ki.a ki.>save @ +           ( n addr )
    swap type                   ( )
    ki.savetype
  then
;

